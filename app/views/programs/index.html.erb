<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Course name</th>
      <th>Level</th>
      <th>Class amount</th>
      <th>Time info</th>
      <th>Description</th>
      <th>Max students</th>
      <% if can? :admin,current_user %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @programs.order(:id).each do |program| %>
      <tr>
        <td><%= program.course_name %></td>
        <td><%= program.level %></td>
        <td><%= program.class_amount %></td>
        <td><%= program.time_info %></td>
        <td><%= program.description %></td>
        <td><%= program.max_students %></td>
        <% if can? :admin, current_user %>
        <td><%= link_to 'Show', program %></td>
        <td><%= link_to 'Edit', edit_program_path(program) %></td>
        <td><%= link_to 'Destroy', program, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :admin, current_user %>
<%= link_to 'New Program', new_program_path %>
<% end %>
