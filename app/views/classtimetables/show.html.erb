<p id="notice"><%= notice %></p>
<div class="row">

<%= render "showtimetable", classtimetable:@classtimetable%>

<% if can? :admin, current_user %>
  <button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#editclasstimetable" id="edit_classtimetable_button" >Edit Classtimetable</button>
  <%= link_to 'Destroy', classtimetable_path(@classtimetable), method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger btn-md" %>
<% end %>
  <%= link_to 'show all classtimetables', classtimetables_path,class:"btn btn-info btn-md" %>
</div>

<!-- this pop up a new attendance form to fill -->
<div id="editclasstimetable" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edit Classtimetable</h4>
      </div>
      <div class="modal-body" id="edit_classtimetable_form">
        <div id="edit_classtimetable">
        <%= render "form" %>
        <button type="button" class="btn btn-default" data-dismiss="modal" id="edit_classtimetable_close" >Close</button>
        </div>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
