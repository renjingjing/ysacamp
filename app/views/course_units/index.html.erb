<p id="notice"><%= notice %></p>

<h1>Listing Course Units</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_units.each do |course_unit| %>
      <tr>
        <td><%= course_unit.title %></td>
        <td><%= course_unit.description %></td>
        <td><%= course_unit.note %></td>
        <td><%= link_to 'Show', course_unit %></td>
        <td><%= link_to 'Edit', edit_course_unit_path(course_unit) %></td>
        <td><%= link_to 'Destroy', course_unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

